	<!-- <bean id="userService" class="com.ajie.sso.user.impl.UserServiceImpl"> 
		<property name="navigatorService" ref="navigatorMgr" /> <property name="rolesData" 
		value="role.xml" /> <property name="xmlUsersData" value="user.xml" /> </bean> -->




</beans>